<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Product.ProductActivity">

<!--        <include-->
<!--            android:id="@+id/loading"-->
<!--            layout="@layout/loading_shimmer_layout" />-->

<!--        <include-->
<!--            android:id="@+id/noItem"-->
<!--            layout="@layout/no_item_layout" />-->

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_80ssdp"
                android:clipToPadding="false"
                android:paddingTop="@dimen/_10ssdp"
                android:paddingBottom="@dimen/_20ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cartBtnLayout"/>

        <LinearLayout
                android:id="@+id/cartBtnLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60ssdp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:padding="@dimen/_5ssdp"
                android:layout_margin="@dimen/_10ssdp"
                android:background="@color/colorPrimaryRed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_15ssdp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_20ssdp"
                        android:text="TOTAL PURCHASE :"/>
                <TextView
                        android:id="@+id/totalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_6ssdp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:textSize="@dimen/_20ssdp"
                        android:text=""/>
            </LinearLayout>

                <ImageView
                        android:layout_width="@dimen/_40ssdp"
                        android:layout_height="@dimen/_40ssdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:foregroundGravity="right"
                        android:src="@drawable/ic_baseline_shopping_cart_white_24"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>